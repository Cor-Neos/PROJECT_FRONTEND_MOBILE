{
  "expo": {
    "name": "Legal Vault",
    "slug": "legal_vault_mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/light_logo.png",
    "scheme": "legalvaultmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/light_logo.png",
        "backgroundColor": "#FFFFFF"  // âœ… Added to prevent default gray/black background
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
